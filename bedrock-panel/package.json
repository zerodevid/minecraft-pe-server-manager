{
  "name": "bedrock-server-panel",
  "version": "1.0.0",
  "description": "Web-based control panel for Minecraft Bedrock Dedicated Server",
  "main": "dist/server.js",
  "scripts": {
    "build": "tsc",
    "build:css": "tailwindcss -i ./src/styles/tailwind.css -o ./public/css/tailwind.css --minify",
    "dev:css": "tailwindcss -i ./src/styles/tailwind.css -o ./public/css/tailwind.css --watch",
    "start": "npm run build:css && ts-node src/server.ts",
    "dev": "npm run build:css && ts-node src/server.ts"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "multer": "^1.4.5-lts.1",
    "node-telegram-bot-api": "^0.66.0",
    "ws": "^8.14.2"
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/multer": "^2.0.0",
    "@types/node": "^25.0.1",
    "@types/ws": "^8.18.1",
    "autoprefixer": "^10.4.22",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}